$header-height = 49px

#wp-debug
  position: fixed
  bottom: 0
  right: 0
  color: red

#main-container
  position: relative
  overflow-x: hidden

.logo
  path
    fill: $color-black

// HEADER

.header
  background-color: $color-blue
  font-size: 14px

#header
  display: none
  background-color: $color-blue
  font-size: 14px

#header-logo-holder
  svg
    height: 1.7rem

#mobile-header
  position: fixed
  width: 100%
  z-index: 1000

#menu-toggle
  svg
    height: 1rem

.close-menu
  display: none

// MOBILE MENU
#main-content,
#mobile-menu
  transition: transform $transition-speed-fast

#mobile-menu
  position: absolute
  right: 100%
  width: 100%
  height: calc('100vh - ' + $header-height)
  top: $header-height
  max-width: 75vw
  background: $color-dark-gray


.menu-open

  .open-menu
    display: none

  .close-menu
    display: block

  #main-content,
  #mobile-menu
    transform: translateX(75vw)

#mobile-header-logo-holder
  svg
    height: 1.4rem


// WHAT IS SECTION

#what-is-video-player
  position: relative
  transform: scale(.98)
  transition: all $transition-speed-fast

  &:hover
    transform: scale(1)

    #what-is-video-play-button-svg
      circle
        fill: $color-black
        transition: all $transition-speed-fast
    #what-is-video
      box-shadow: -6px 14px 65px 1px $color-gray

  &.playing
    transform: scale(1)

    #what-is-video-play-trigger
      display: none
    #what-is-video
      box-shadow: -6px 14px 65px 1px $color-gray

#what-is-video-play-trigger
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  z-index: 10

#what-is-video-play-button-svg
  height: 30%
  width: 30%
  circle
    fill: $color-gray

#what-is-video
  box-shadow: -6px 14px 20px 1px $color-gray
  border-radius: 8px
  border: 1px solid $color-gray
  transition: all $transition-speed

// SPLASH

#splash-logo-holder
  svg
    height: 7rem

// HOW IT WORKS
.mobile-how-illustration
  svg
    max-width: 50px
    max-height: 50px

#connection-ways-icon-row
  svg
    max-width: 300px

// FOOTER SIGNUP
#signup-logo-holder
  svg
    height: 3rem

#section-footer-signup
  input,
  button
    border-width: 0
    border-radius: $margin-tiny
    letter-spacing: $font-tracking-basic
  input
    width: 320px
    max-width: 100%
    padding: $margin-tiny $margin-small
    margin-right: $margin-small
    margin-bottom: $margin-small
    border-bottom: 1px solid $color-gray
    &:focus
      outline-color: $color-gray
  button
    padding: $margin-tiny $margin-basic
    background-color: $color-black
    color: $color-white
    transition: background-color $transition-speed-fast
    &:hover
      background-color: $color-gray
    &:focus
      outline: 0

// COUNTDOWN
.font-size-countdown
  font-size: 30px
