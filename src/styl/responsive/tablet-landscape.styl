$header-height = 55px

#header
  background-color: $color-blue
  font-size: 14px
  display: block

// SPLASH
#splash
  min-height: calc('100vh - ' + $header-height)

#splash-logo-holder
  svg
    height: 100px

#splash-video-container

  video
    height: calc('100vh - ' + $header-height)

// WHAT IS SECTION

#what-is-video-player

  &:hover
    #what-is-video
      box-shadow: 0px 21px 27px 1px $color-gray-transparent

  &.playing
    #what-is-video
      box-shadow: 0px 21px 27px 1px $color-gray-transparent

#what-is-video
  box-shadow: 0px 12px 16px 1px $color-gray-transparent

// HOW IT WORKS
#section-how
  .how-illustration-caption
    font-size: 12px
    //letter-spacing: .2em

#connection-ways-icon-row
  svg
    max-width: none

// DEMOS
.demo-thumb
  border-radius: $margin-micro
  max-height: 301px

// FOOTER SIGNUP
#signup-logo-holder
  svg
    height: 90px

#section-footer-signup
  font-size: $font-size-mid
  input
    width: 500px
    padding: $margin-tiny $margin-small
    margin-right: $margin-small
    margin-bottom: $margin-small
  button
    padding: $margin-tiny $margin-basic
    border-radius: $margin-micro

// COUNTDOWN
.font-size-countdown
  font-size: 110px
